<div class="player-show">
  <h2><%= current_player.playername %></h2>
  <%= image_tag(current_user.avatar) %>
  <p>Last active: <%= current_player.last_sign_in_at.strftime("%b %d, %Y") %></p>
  <p>Age: <%= current_player.age %> years</p>
  <p>Location: <%= current_player.country %></p>
  <h3><span>Games won:</span> <%= current_player.games_won %></h3>
  <h3><span>Games lost:</span> <%= current_player.games_lost %></h3>
  <h3><span>Games tied:</span> <%= current_player.games_drawn %></h3>
  <h3><span>Games in progress:</span> <%= current_player.games_in_progress %></h3>
  <h3><span>Total games played:</span> <%=current_player.total_games %></h3>
  <br />
  <% if current_player == current_player %>
    <%= link_to "Edit Profile", "#" %>
  <% end %>
</div>

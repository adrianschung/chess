<section id='messages_index'>
  <% if @over_ten %>
    <%= link_to 'Show Previous', '?m=all' %>
  <% end %>
  <div class='ui segment'>
    <% @messages.each do |message| %>
      <% if message.body %>
        <% player = Player.find(message.player_id) %>
        <div class='item'>
          <div class='content'>
            <div class='header'><strong><%= player.playername %></strong> <%= message.message_time %></div>
            <div class='list'>
              <div class='item'>
                <i class='right triangle icon'></i>
                  <%= message.body %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= form_for [@conversation, @message], html: {class: 'ui reply form'} do |f| %>
    <div class='field'>
      <%= f.text_area :body, class: 'form-control' %>
    </div>
    <%= f.text_field :player_id, value: current_player.id, type: 'hidden' %>
    <div>
      <%= f.submit 'Add Reply', class: 'ui blue labeled submit icon button' %>
    </div>
  <% end %>
</section>

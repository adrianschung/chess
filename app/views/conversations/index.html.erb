<div id='conversation_wrapper'>
  <section class='inner'>
  <div>
    <h3>Conversations</h3>
    <div>
      <div>
        <% @conversations.each do |conversation| %>
          <div class='conversation_box'>
            <% if conversation.sender_id == current_player.id %>
              <% recipient = Player.find(conversation.recipient_id) %>
            <% else %>
              <% recipient = Player.find(conversation.sender_id) %>
            <% end %>
            <%= link_to recipient.first_name, conversation_messages_path(conversation) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <h3>All Players</h3>
    <div>
      <% @players.each do |player| %>
        <% if player.id != current_player.id %>
          <div>
            <%= link_to @player.playername, players_path(@player) %> <%= link_to 'Message me!', conversations_path(sender_id: current_player.id, recipient_id: player.id), method: 'post'%>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  </section>
</div>
